<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ChooseCategory"
    android:background="@drawable/background1" >

    <TextView
        android:id="@+id/selectcatheading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:textStyle="bold"
        android:textSize="22sp"
        android:text="@string/SelectCat"
        android:textColor="#000000" />
    
    <Spinner 
        android:id="@+id/selectcategory_spinner"
        android:layout_width="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/selectcatheading"
        
        />
    
     <Button 
        android:id="@+id/catsubmit_button"
        android:layout_width="100dp"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/selectcategory_spinner"
        android:text="Submit"
        
        />
     
      <Button 
        android:id="@+id/back_button"
        android:layout_width="100dp"
        android:textSize="18sp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/selectcategory_spinner"
        android:layout_toRightOf="@+id/catsubmit_button"
        android:text="Back"
        
        />
</RelativeLayout>
